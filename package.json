{
  "name": "dysporium-polyglot",
  "version": "1.0.0",
  "description": "The simplest way to add multi-language support to any website. Install once, translate everywhere.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./packages/react/dist/index.d.ts",
      "import": "./packages/react/dist/index.mjs",
      "require": "./packages/react/dist/index.js"
    },
    "./dom": {
      "types": "./packages/dom/dist/index.d.ts",
      "import": "./packages/dom/dist/index.mjs",
      "require": "./packages/dom/dist/index.js"
    },
    "./core": {
      "types": "./packages/core/dist/index.d.ts",
      "import": "./packages/core/dist/index.mjs",
      "require": "./packages/core/dist/index.js"
    },
    "./ai": {
      "types": "./packages/ai/dist/index.d.ts",
      "import": "./packages/ai/dist/index.mjs",
      "require": "./packages/ai/dist/index.js"
    }
  },
  "files": [
    "dist",
    "packages/*/dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "multi-language",
    "polyglot",
    "sdk",
    "ai",
    "llm",
    "openai",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
