{
  "name": "@dysporium/polyglot-react",
  "version": "1.0.0",
  "description": "React integration for Dysporium Polyglot",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "i18n",
    "react",
    "translation",
    "polyglot"
  ],
  "license": "MIT",
  "dependencies": {
    "@dysporium/polyglot-core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}

